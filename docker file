# Use an official Tomcat runtime as the base image
FROM tomcat:9.0-jdk11-openjdk

# Set the working directory in the container
WORKDIR /usr/local/tomcat/webapps/

# Remove the default Tomcat webapps
RUN rm -rf ROOT* examples* host-manager* manager*

# Clone the GitHub repository into the container
RUN apt-get update && apt-get install -y git \
    && git clone https://github.com/kartheekbogolu/JavaCalculator.git \
    && rm -rf JavaCalculator/.git \
    && mv JavaCalculator/ROOT.war ./ROOT.war

# Expose the port that the Tomcat server is running on
EXPOSE 8080

# Start Tomcat server when the container launches
CMD ["catalina.sh", "run"]
